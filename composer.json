{
    "name": "tesla-software/jmbg",
    "description": "Validate, generate and extract data from JMBG (Unique Master Citizen Number)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Keleković",
            "email": "kele@teslasoftware.eu",
            "role": "Developer"
        },
        {
            "name": "Karlo Mikuš",
            "email": "karlo@teslasoftware.eu",
            "role": "Developer"
        }
    ],
    "keywords": [
        "jmbg",
        "unique master citizen number",
        "croatia",
        "bosnia",
        "serbia",
        "montenegro",
        "macedonia",
        "slovenia"
    ],
    "require": {
        "php" : "^8.0|^8.1|^8.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=9.0",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Tesla\\JMBG\\": "src/JMBG"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse",
        "check-style": "phpcs --standard=PSR12 src",
        "fix-style": "phpcbf --standard=PSR12 src"
    }
}
